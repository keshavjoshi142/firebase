<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cab_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.keshavjoshi.firebase.cab_details">

    <TextView
        android:text="SEATS"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:id="@+id/seats"
        android:layout_below="@+id/destination"
        android:layout_alignLeft="@+id/destination"
        android:layout_alignStart="@+id/destination"
        android:textSize="30sp"
        android:layout_toLeftOf="@+id/date"
        android:layout_toStartOf="@+id/date" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView13"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/date"
        android:layout_toRightOf="@+id/name"
        android:layout_toEndOf="@+id/name"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/textView16"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/time"
        android:layout_toRightOf="@+id/name"
        android:layout_toEndOf="@+id/name"
        android:id="@+id/textView17"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textView14"
        android:textSize="24sp"
        android:layout_alignTop="@+id/destination"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:id="@+id/textView18"
        android:textSize="24sp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="40dp"
        android:layout_width="180dp" />

    <TextView
        android:text="NAME:"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/name"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/textView8"
        android:textSize="24sp"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18" />

    <TextView
        android:text="DESTINATION:"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/destination"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/time"
        android:text="TIME:"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="CONTACT:"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/contact"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="DATE:"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/date"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/destination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_height="40dp"
        android:id="@+id/textView8"
        android:text="SEATS:"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_below="@+id/seats"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/contact"
        android:layout_alignEnd="@+id/contact" />

</RelativeLayout>
